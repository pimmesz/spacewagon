<h1>My Profile</h1>

<br>
<h3>My personal data</h3>
<p>Name: <%= @user.first_name %> <%= @user.last_name %></p>
<p>Email: <%= @user.email %></p>
<p>User id: <%= @user.id %></p>

<h3>Spaceships I rented</h3>
<%= @user.bookings.each do |booking| %>
  <%= booking.start_date %>
  <%= booking.end_date %>
  <%= booking.spaceship.name %>
  <% end %>

<h3>Bookings of my spaceship</h3>
<% @user.my_spaceships_bookings do |msb| %>
  <%= msb.name %>
  <%= msb.start_date %>
  <%= msb.end_date %>
  <%= msb.first_name %>
  <%= msb.last_name %>
  <% end %>

<br>
<%= link_to "Update", edit_user_registration_path %>
<%= link_to "Home", root_path %>
<%= link_to "Log out", destroy_user_session_path, method: :delete %>
