<h1>Change your life: <br>rent a spaceship</h1>
<br>
<h3>SpaceWagon brings great spaceships to adventurous people<h3>

<%= form_tag spaceships_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Search a Spacehship"
  %>
<% end %>

<br>

<h3>Spaceships near you</h3>

<br>

<% if @spaceships %>

  <% @spaceships.each do |s| %>
    <h4><%= link_to s.name, spaceship_path(s) %> </h4>
    <ul>
      <li>Owner: <%= s.user.first_name %> <%= s.user.last_name %></li>
      <li>Captain: <%= s.captain %> </li>
      <li>Location: <%= s.location %> </li>
      <li>Capacity: <%= s.capacity %> </li>
      <li>Price per day: <%= s.price_per_day %> </li>
    </ul>
    <%= cl_image_tag s.photo, height: 300, width: 400, crop: :fill %>
    <br>
    <% end %>
<% end %>
<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
></div>

<%= link_to "Dashboard", dashboard_path %>
