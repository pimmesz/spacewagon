    <%#= link_to "Dashboard", dashboard_path %>
    <div class="container">
      <div class="row">
        <h3>Spaceships near you</h3>
        <div class="col-xs-8">
          <div class="cards-container">
            <div class="row">
              <% @spaceships.each do |s| %>
              <div class="col-xs-4">
                <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path s.photo %>');">
                  <div class="overlay">
                    <h4><%= link_to s.name, spaceship_path(s) %> </h4>
                    <br>Location: <%= s.location %>
                    <br>Capacity: <%= s.capacity %>
                    <br>Price per day: <%= s.price_per_day %>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-xs-4">
          <div
          id="map"
          data-markers="<%= @markers.to_json %>">
        </div>
      </div>
    </div>
  </div>


  <%#= link_to "Dashboard", dashboard_path %>

